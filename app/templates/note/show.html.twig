{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_note_details'|trans({'%id%': note.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_note_details'|trans({'%id%': note.id|default('')}) }}</h1>
    <a href="{{ url('note_edit', {id: note.id}) }}" title="{{ 'action_edit'|trans }}">
        {{ 'action_edit'|trans }}
    </a>
    {% if note is defined and note|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ note.id }}</dd>
            <dt>{{ 'label_title'|trans }}</dt>
            <dd>{{ note.title }}</dd>
            <dt>{{ 'label_description'|trans }}</dt>
            <dd>{{ note.description }}</dd>
            <dt>{{ 'label_date'|trans }}</dt>
            <dd>{{ note.date|format_datetime('full', locale='pl') }}</dd>

        </dl>
        <p>
            <a href="{{ url('note_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}
